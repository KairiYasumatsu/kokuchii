<head prefix="og: http://ogp.me/ns# fb: http://ogp.me/ns/ fb# article: http://ogp.me/ns/article#">

<meta property="og:url" content="http://localhost:3000/posts/<%=@post.id%>" />

<meta property="og:type" content="article" />

<meta property="og:title" content=" <%= @post.title%>" />

<meta property="og:description" content=" <%=@post.detail%>" />

<meta property="og:site_name" content="kokuchii" />

<meta property="og:image" content=" <%=@post.image.to_s%>" />

<meta name="twitter:card" content=" Summary with Large Image" />



<header class="c-top-bar">
  <div class="header-container">
    <a class="header-container-header-logo">kokuchii</a>
     <div class="header-container-nav">
       <%= image_tag @user.image.to_s, :class => "header-image" %>
     </div>
  </div>
</header>

<div id="header-nav-slide">
  <div class="header-nav-slide-item">
  <%= link_to "ログアウト", destroy_user_session_path,method: :delete, :class => "header-nav-slide-link" %>
  <%= link_to "マイページ", user_path(current_user.id), :class => "header-nav-slide-link" %>
  <p class="close-nav">閉じる</p>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-2">

    </div>
    <div class="col-md-8">
      <div class="post-show">
      <p><%= image_tag @post.image.to_s,class: "show_card_image",width:600, height: 320 %></p>
      <p style="font-size: 32px;"><%= @post.title%></p>


      <% if current_user.already_liked?(@post) %>
       <%= link_to post_like_path(@post), method: :delete do %>
       <span class="fa fa-heart like-btn-unlike"></span>
     <% end %>
      <% else %>
      <%= link_to post_likes_path(@post), method: :PostsController do %>
      <span class="fa fa-heart like-btn"></span>
    <% end %>
      <% end %>
      <%= @post.likes.count %>

      <p><%= link_to @post.user.name, user_path(id: @post.user_id) %></p>
      <p style="font-size: 18px;"><%=@post.detail%></p>
      <p><%= @post.created_at %></p>
      <p><%= link_to "編集する", edit_post_path(@post.id) %></p>
      </div>

      <div id="sns-area">
      </div>

      <h2>コメント一覧</h2>
      <% @post.comments.each do |c| %>
        <div>
          <%= image_tag c.user.image.to_s, :class => "header-image" %>
          <a href="/users/<%= @post.user.id %>"><%= c.user.name %></a>
          <%= c.content %>
          <hr>
        </div>
      <% end %>

      <%= form_for [@post, @comment] do |f| %>
        <%= f.text_field :content, class:"form-control" %>
        <br>
        <%= f.submit 'コメントする', class: "btn btn-primary" %>
      <% end %>

      <%= link_to "コクチ一覧に戻る", posts_path %>
    </div>
    <div class="col-md-2">

      </div>
  </div>
  <script type="text/javascript">
    var shareUrl = location.href; // 現在のページURLを使用する場合 location.href;
    var shareText = '<%=@post.title%>'; // 現在のページタイトルを使用する場合 document.title;
  </script>
  <%= javascript_include_tag 'posts', 'data-turbolinks-track': 'reload' %>

</div>

<script type="text/javascript">
  $(function(){
    $("#header-nav-slide").css("display","none");
    $('.header-image').click(function(){
      $("#header-nav-slide").css("display","block");
    });
    $(".close-nav").click(function(){
     $("#header-nav-slide").slideUp(250);
   });
  });
</script>
